generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id          Int      @id @default(autoincrement())
  title       String
  img_url     String
  description String?
  category    Category @relation(fields: [category_id], references: [id])
  category_id Int
  kudos       Kudos[]
}

model Kudos {
  id           Int    @id @default(autoincrement())
  title        String
  description  String
  img_url      String
  upvote_count Int
  board        Board  @relation(fields: [board_id], references: [id], onDelete: Cascade)
  board_id     Int
}

model Category {
  id            Int     @id @default(autoincrement())
  category_name String  @unique
  display_name  String
  boards        Board[]
}
